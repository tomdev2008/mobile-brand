public class DateSbUtil {

	/**
	 * 将起始时间补充到时分秒
	 * @param beginDate
	 * @return
	 */
    public static String formatStartDate(String beginDate){
    	if(beginDate!=null && !"".equals(beginDate)){
    		beginDate=beginDate+" 00:00:00";
    	}
    	return beginDate;
    }
    
    /**
     * 将结束时间补充到时分秒
     * @param endDate
     * @return
     */
    public static String formatEndDate(String endDate){
    	if(endDate!=null && !"".equals(endDate)){
    		endDate=endDate+" 23:59:59";
    	}
    	return endDate;
    }
   
}
